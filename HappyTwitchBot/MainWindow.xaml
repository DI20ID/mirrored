<Window x:Class="HappyTwitchBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HappyTwitchBot"
        mc:Ignorable="d"
        Title="HappyTwitchBot" Height="350" Width="525" ResizeMode="CanMinimize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"></BooleanToVisibilityConverter>
    </Window.Resources>

    <Grid>
        <Button x:Name="b_connect" Content="Connect" HorizontalAlignment="Left" Margin="29,66,0,0" VerticalAlignment="Top" Width="75" FontSize="14 px" BorderThickness="1" 
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Focusable="False" Click="b_connect_Click"/>
        <TextBlock x:Name="tbl_dummy_username" HorizontalAlignment="Left" Text="Username" Margin="14,12,0,0" FontStyle="Italic" VerticalAlignment="Top" 
                   Foreground="Gray" Visibility="{Binding ElementName=tb_username, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" Width="116"/>
        <TextBox x:Name="tb_username" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="Transparent"
                 IsHitTestVisible="True" TextChanged="tb_username_TextChanged" GotFocus="tb_username_GotFocus"/>
        <TextBlock x:Name="tbl_dummy_password" HorizontalAlignment="Left" Text="Password" Margin="14,40,0,0" FontStyle="Italic" VerticalAlignment="Top" 
                   Foreground="Gray" Visibility="{Binding ElementName=tb_password, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" Width="116"/>
        <TextBox x:Name="tb_password" HorizontalAlignment="Left" Height="23" Margin="10,38,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Background="Transparent"
                 Width="120" IsHitTestVisible="True" TextChanged="tb_username_TextChanged" GotFocus="tb_password_GotFocus"/>
        <TextBlock x:Name="tbl_dummy_channel" HorizontalAlignment="Left" Text="Channel" Margin="139,12,0,0" FontStyle="Italic" VerticalAlignment="Top" 
                   Foreground="Gray" Visibility="{Binding ElementName=tb_channel, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" Width="116"/>
        <TextBox x:Name="tb_channel" HorizontalAlignment="Left" Height="23" Margin="135,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="Transparent" 
                 GotFocus="tb_channel_GotFocus"/>
        <Button x:Name="testbutton" Content="testbutton" HorizontalAlignment="Left" Margin="432,233,0,0" VerticalAlignment="Top" Width="75" FontSize="14 px" BorderThickness="1" 
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Focusable="False" Click="testbutton_Click"/>

    </Grid>
</Window>
