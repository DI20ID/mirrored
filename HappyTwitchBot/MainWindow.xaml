<Window x:Class="HappyTwitchBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HappyTwitchBot"
        mc:Ignorable="d"
        Title="HappyTwitchBot" Height="533.333" Width="878.921" ResizeMode="CanMinimize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"></BooleanToVisibilityConverter>
    </Window.Resources>

    <Grid>
        <Button x:Name="testbutton" Content="testbutton" HorizontalAlignment="Left" Margin="111,350,0,0" VerticalAlignment="Top" Width="75" FontSize="14 px" BorderThickness="1" 
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Focusable="False" Click="testbutton_Click"/>
        <Grid x:Name="g_connect" HorizontalAlignment="Left" Height="93" Margin="10,10,0,0" VerticalAlignment="Top" Width="259">
            <Button x:Name="b_connect" Content="Connect" HorizontalAlignment="Left" Margin="7,63,0,0" VerticalAlignment="Top" Width="245" FontSize="14 px" BorderThickness="1" 
        		Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Focusable="False" Click="b_connect_Click"/>
            <TextBox x:Name="tb_username" HorizontalAlignment="Left" Height="23" Margin="7,7,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="Transparent"
        		IsHitTestVisible="True" TextChanged="tb_username_TextChanged" GotFocus="tb_username_GotFocus"/>
            <TextBox x:Name="tb_password" HorizontalAlignment="Left" Height="23" Margin="7,35,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Background="Transparent"
        		Width="120" IsHitTestVisible="True" TextChanged="tb_username_TextChanged" GotFocus="tb_password_GotFocus"/>
            <TextBox x:Name="tb_channel" HorizontalAlignment="Left" Height="23" Margin="132,7,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="Transparent" 
        		GotFocus="tb_channel_GotFocus"/>
            <CheckBox x:Name="cb_remember" Content="Remember Me" HorizontalAlignment="Left" Margin="136,39,0,0" VerticalAlignment="Top"/>
        </Grid>
        <TextBox x:Name="tb_test" HorizontalAlignment="Left" Height="457" Margin="274,20,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="589"/>
        <TextBox x:Name="tb_welcomemsg" HorizontalAlignment="Left" Height="84" Margin="18,128,0,0" TextWrapping="Wrap" Text="Welcome to the channel!" VerticalAlignment="Top" Width="243"/>
        <Label x:Name="label" Content="Welcome Message" HorizontalAlignment="Left" Margin="18,103,0,0" VerticalAlignment="Top" Width="243"/>

    </Grid>
</Window>
